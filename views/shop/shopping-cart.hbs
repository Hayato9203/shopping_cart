{{#if products}}
<div class="row">
    <div class="col-sm-6 col-md-6 offset-md-3 offset-sm-3">
        <ul class="list-group">
            {{#each products}}
            <li class="list-group-item justify-content-between">
                <strong>{{this.item.title}}</strong>
                <span class="badge badge-success">${{this.price}}</span>
                <div class="dropdown btn-group">
                    <button class="btn btn-primary btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true"
                        aria-expanded="false">
                        Action
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="/reduce/{{this.item._id}}">Reduse by 1</a>
                        <a class="dropdown-item" href="/remove/{{this.item._id}}">Reduse All</a>
                    </div>
                </div>
                <span class="badge badge-info badge-pill float-right">{{this.quantity}}</span>
            </li>
            {{/each}}
        </ul>
    </div>
</div>
<div class="row">
    <div class="col-sm-6 col-md-6 offset-md-3 offset-sm-3">
        <strong>Total:
            <span class="badge badge-success">${{totalPrice}}</span>
        </strong>
    </div>
</div>
<hr>
<div class="row">
    <div class="col-sm-6 col-md-6 offset-md-3 offset-sm-3">
        <a href="/checkout" class="btn btn-success" type="button">Checkout</a>
    </div>
</div>
{{else}}
<div class="row">
    <div class="col-sm-6 col-md-6 offset-md-3 offset-sm-3">
        <h2>No Items in Cart</h2>
    </div>
</div>
{{/if}}